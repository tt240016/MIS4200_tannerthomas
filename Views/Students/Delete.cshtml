@model MIS4200_tt240016.Models.Student

@{
    ViewBag.Title = "Delete a Student";
}

<h2>Delete a Student</h2>

<h3>Are you sure you want to delete this?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
            Student First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.studentFirst)
        </dd>

        <dt>
            Student Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.studentLast)
        </dd>

        <dt>
            Student Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.studentEmail)
        </dd>

        <dt>
            Student Phone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.studentPhone)
        </dd>

        <dt>
            Course ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.courseID)
        </dd>

    </dl>

    <div class="alert alert-danger">
        <strong>Danger!</strong> If you click delete, this record will be deleted from the database and you will have to manually create it again.
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
